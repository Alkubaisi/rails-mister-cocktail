
<div class="container">
  <div class="row">


    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-md-6">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://static.pexels.com/photos/4784/alcohol-bar-party-cocktail.jpg');">
       <!--  <div class="card-category"><%= cocktail.name %></div> -->
        <div class="card-description">
          <h2><%= cocktail.name %></h2>

        </div>

        <%= link_to "#", cocktail, class: "card-link" %>

      </div>
       <ul class="list-inline">

         <li>
          <%= link_to edit_cocktail_path(cocktail) do %>
          <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
        </li>
        <li>

          <%= link_to cocktail, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>

        </li>
        <% end  %>

      </ul>
    </div>

    <% end %>



  </div>
</div>












